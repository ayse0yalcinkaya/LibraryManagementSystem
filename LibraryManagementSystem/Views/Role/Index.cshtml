@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h1>Roller</h1>
<table class="table">
    <thead>
        <tr>
            <th>Rolü</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Yeni Rol Ekle</a>
